{
  "compilerOptions": {
    "target": "ES2020", // Modern JS output
    "module": "ESNext", // ES modules
    "moduleResolution": "Node",
    "outDir": "dist", // Compiled JS files
    "rootDir": "src", // Your source folder
    "esModuleInterop": true, // Allows default imports
    "strict": true, // Type safety
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true // Skip type checking for node_modules
  },
  "include": ["src"]
}
